<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
    <display-name>PupilsInfo</display-name>
    <welcome-file-list>
        <welcome-file>pupil.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <description></description>
        <display-name>PupilController</display-name>
        <servlet-name>PupilController</servlet-name>
        <servlet-class>com.epam.jmp.controller.PupilController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PupilController</servlet-name>
        <url-pattern>/PupilController</url-pattern>
    </servlet-mapping>
</web-app>